extends layout

block scripts
    script(src="/javascripts/register.js")
    if warn
        script alert("#{warn}")

block content
    div.content
        div.header
            span.border
            h2 注册
            span.border
        form(action="/register", method="post")
            input#userName(type="text", placeholder= "用户名", name="username")
            input#pwd(type="password", placeholder= "密码", name="pwd")
            input#pwdCheck(type="password", placeholder= "确认密码", name="pwdcheck")
            input#registerSubmit(type="submit", class= "button" style="display:none;")
        a#submit(href="javascript:void(0)") 注册
