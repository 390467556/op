extends layout

block scripts 
    script(src="/javascripts/lib/moment.js")    
    script(src="/javascripts/lib/jquery-ui/js/jquery-ui-1.10.4.custom.min.js")
    script(src="/javascripts/config.js")    
    if msg
        script alert("#{msg}")

block stylesheets
    link(href="/stylesheets/jquery-ui/base/jquery-ui-1.10.4.custom.css", rel="stylesheet")
    link(href="/stylesheets/config.css", rel="stylesheet")    

block content
    div.content
        h3 效果报表
        div.menu
            ul
                a.link(href="javascript: void(0)")
                    li.border 设置页面
                a.link(href="/forms")
                    li 报表页面  
            
            span.special to
            span 请选择日期:
            
        div.table
            form(action="/config", method="post")
                table(style="margin-top: 20px")
                    tr
                        td.first 全天预设出价
                        - for (var i = 0; i < 24; i++)
                            td #{i}
                    tr
                        td.firstt 单价
                        - for (var i = 0; i < 24; i++)
                            td
                                if data
                                    input(type="text", name="value#{i}", value="#{data[i]}")
                                else
                                    input(type="text", name="value#{i}") 
                    tr
                        td.last(colspan="25")
                            input.hidden#realSubmit(type="submit", value="提交")
                            input.submit#submitButton(type="button", value="提交")
                            i.space 空格
                            input.reset(type="reset", value="重置")
                    tr.tr
                        td
                            input.nonEmpty#platName(type="text", name="name", placeholder="平台名称")
                        td
                            input.nonEmpty#platUser(type="text", name="appusrname", placeholder="平台账号")
                        td
                            input.nonEmpty#platPwd(type="text", name="apppwd", placeholder="平台密码")
                        td
                            input.nonEmpty#appName(type="text", name="appname", placeholder="app名称")
                    
                    tr
                        td.td.tdOne
                            input.nonEmpty#end(type="text", class="end", name="end")
                        td.td.tdTwo
                            input.nonEmpty#start(type="text", class="start", name="start")