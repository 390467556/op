extends layout

block scripts 
    script(src="/javascripts/lib/jquery-ui/js/jquery-ui-1.10.4.custom.min.js")
    script(src="/javascripts/lib/moment.js")  
    script(src="/javascripts/forms.js")
    script window.n=#{n}; window.showData="#{showData}"
    
block stylesheets
    link(href="/stylesheets/jquery-ui/base/jquery-ui-1.10.4.custom.css", rel="stylesheet")
    link(href="/stylesheets/forms.css", rel="stylesheet")    

block content
    div.content
        h3 效果报表
        div.menu
            
            ul
                li
                    a(href="/config") 设置页面
                li.border
                    a(href="javascript: void(0)") 报表页面
            
            div 下载报表

            select.selectOne.special
                option 小时消耗表
                option ctr表
                option 单价
            
            input.date(type="date", style="border:1px solid #ddd;")
            span 过去30天
                input(type="radio", name="days", value="30") 
            span 过去7天
                input(type="radio", name="days", value="7")
            span 今天
                input(type="radio" name="days", value="3")
            
            select.selectTwo
                option(value="") 全部应用
                if apps
                    each app in apps
                        option(value="")= app
            